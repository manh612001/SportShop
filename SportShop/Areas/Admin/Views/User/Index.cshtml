﻿
@model IEnumerable<SportShop.Models.AppUser>
@{
    int stt = 0;
}
<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Orders List</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách nhân viên</span>

            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">

                <div class="text-right">
                    <a asp-area="Admin" asp-controller="User" asp-action="Add">
                        <button class="btn btn-primary">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm tài khoản</span>
                        </button>
                    </a>

                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table" id="data-table">
                    <thead>
                        <tr>

                            <th>STT</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Chức vụ</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model)
                        {
                            stt++;
                            <tr>
                                <td>@stt</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.Address</td>
                                <td>@user.Role</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                                        <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                            <i class="anticon anticon-info"></i>
                                        </button>
                                    </a>
                                    <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
                                        <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                            <i class="anticon anticon-edit"></i>
                                        </button>
                                    </a>
                                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                                        <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                                            <i class="anticon anticon-delete"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Content Wrapper END -->
@model IEnumerable<SportShop.ViewModels.Product.ListProductViewModel>

@{
    ViewData["Title"] = "ListProduct";
    int stt = 0;
}

<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Danh sách</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách sản phẩm</span>

            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">

                <div class="text-right">
                    <a asp-area="Admin" asp-controller="Products" asp-action="Create">
                        <button class="btn btn-primary">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm sản phẩm</span>
                        </button>
                    </a>

                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table" id="data-table" >
                    <thead>
                        <tr>

                            <th>STT</th>

                            <th>Tên</th>
                            <th>Ảnh</th>
                            <th>Giá</th>
                            <th>Đơn vị tính</th>
                            <th>Danh mục</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        stt++;
                        <tr>

                            <td>@stt</td>
                            <td>@item.Name</td>
                            <td>
                                <img src="/media/products/@item.Image" width="100px;"></img>
                            </td>
                            <td>@item.Price</td>
                            <td>@item.DVT</td>
                            <td>@item.Category.Name</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                        <i class="anticon anticon-edit"></i>
                                    </button>

                                </a>
                                <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                                        <i class="anticon anticon-delete"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Content Wrapper END -->

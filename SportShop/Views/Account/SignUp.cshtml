@model SportShop.ViewModels.Account.AddUserViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Enlink - Admin Dashboard Template</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/AdminAssets/images/logo/favicon.png">
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- page css -->
    <!-- Core css -->
    <link href="~/AdminAssets/css/app.min.css" rel="stylesheet">

</head>

<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('../AdminAssets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between m-b-30">
                                        <img class="img-fluid" alt="" src="~/AdminAssets/images/logo/wml-sodex-sport.png" alt="Logo" width="148px;" height="70px;">
                                        <h2 class="m-b-0">Sign In</h2>
                                    </div>
                                    <form method="post" asp-action="SignUp" asp-controller="Account">
                                       
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label asp-for="FullName">Họ tên</label>
                                                <input asp-for="FullName" class="form-control" id="inputEmail4" placeholder="Họ tên">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label asp-for="UserName">Tên người dùng</label>
                                                <input asp-for="UserName" class="form-control" id="inputPassword4" placeholder="Tên người dùng">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Email">Email</label>
                                            <input asp-for="Email" class="form-control" id="inputAddress" placeholder="Email">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Password">Mật khẩu</label>
                                            <input asp-for="Password" type="password" class="form-control" id="inputAddress2" placeholder="Xác nhận mật khẩu">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="PasswordConfirm">Xác nhận mật khẩu</label>
                                            <input asp-for="PasswordConfirm" type="password" class="form-control" id="inputAddress2" placeholder="Xác nhận mật khẩu">
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label asp-for="Address">Địa chỉ</label>
                                                <input asp-for="Address" class="form-control" id="Địa chỉ">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label asp-for="Dob">Ngày sinh</label>
                                                <input type="date" asp-for="Dob" class="form-control" id="inputZip">
                                            </div>
                                        </div>
                                        <input type="hidden" asp-for="Role" value="Customer"/>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between p-t-15">
                                                <button class="btn btn-primary">Sign In</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Core Vendors JS -->
    <script src="~/AdminAssets/js/vendors.min.js"></script>

    <!-- page js -->
    <!-- Core JS -->
    <script src="~/AdminAssets/js/app.min.js"></script>

</body>

</html>
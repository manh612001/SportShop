﻿
@model SportShop.ViewModels.Account.AddUserViewModel
<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Danh sách danh mục</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="breadcrumb-item">Danh sách nhân viên</a>
                <span class="breadcrumb-item active">Thêm nhân viên</span>
            </nav>
        </div>
    </div>
    <form asp-action="Add" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FullName">Họ tên</label>
                <input asp-for="FullName" class="form-control" id="inputEmail4" placeholder="Họ tên">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UserName">Tên người dùng</label>
                <input asp-for="UserName" class="form-control" id="inputPassword4" placeholder="Tên người dùng">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" id="inputAddress" placeholder="Email">
        </div>
        <div class="form-group">
            <label asp-for="Password">Mật khẩu</label>
            <input asp-for="Password" class="form-control" id="inputAddress2" placeholder="Xác nhận mật khẩu">
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm">Xác nhận mật khẩu</label>
            <input asp-for="PasswordConfirm" class="form-control" id="inputAddress2" placeholder="Xác nhận mật khẩu">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Address">Địa chỉ</label>
                <input asp-for="Address" class="form-control" id="Địa chỉ">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Dob">Ngày sinh</label>
                <input type="date" asp-for="Dob" class="form-control" id="inputZip">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Chức vụ</label>
                <select id="inputState" asp-for="Role"class="form-control">
                    <option selected>Chọn...</option>
                    <option value="Admin">Quản trị</option>
                    <option value="User">Người dùng</option>
                </select>
            </div>
            
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>
<!-- Content Wrapper END -->

<!-- Footer END -->